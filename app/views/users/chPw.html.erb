
<h1>Changing password for:</h1> <%= @user.username%>

<%=   form_for @user, { :action => "chPwUpdate" }   do |f| %>
  	  <% if @user.errors.any? %>
	    <div id="error_explanation">
		<h2><%= t :error_update, :count => @user.errors.count %></h2>	
	
	      <ul>
	      <% @user.errors.full_messages.each do |msg| %>
	        <li><%= msg %></li>
	      <% end %>
	      </ul>
	    </div>
	  <% end %>



  <p>
   <%= t('password') %> : <br />
    <%= f.password_field :password %>
  </p>


  <p>
    <%= f.submit %>
  </p>
<% end %>
